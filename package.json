{
  "name": "ssh-connect",
  "displayName": "SSH Connect",
  "description": "Manage and Connect to SSH hosts directly in VS Code",
  "version": "0.0.1",
  "publisher": "elcamilet",
  "author": {
    "name": "Camilo Nevot",
    "email": "elcamilet@gmail.com",
    "url": "https://github.com/elcamilet"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "activitybar": [
        {
          "id": "sshHostsView",
          "name": "SSH Hosts"
        }
      ]
    },
    "commands": [
      {
        "command": "ssh-connect.connect",
        "title": "SSH Connect"
      },
      {
        "command": "ssh-connect.refreshHosts",
        "title": "Refresh SSH Hosts"
      },
      {
        "command": "ssh-connect.editConfig",
        "title": "Edit SSH Config"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ssh-connect.refreshHosts",
          "when": "view == sshHostsView",
          "group": "navigation"
        },
        {
          "command": "ssh-connect.editConfig",
          "when": "view == sshHostsView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "dependencies": {
    "fs": "^0.0.1-security",
    "ssh-config": "^4.3.0"
  }
}
